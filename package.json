{
  "name": "reddit-clients",
  "version": "0.1.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/graphql-server",
    "packages/reddio-ui"
  ],
  "scripts": {
    "format": "prettier --write '**/**/*.{js,ts,css,html,md,yaml,yml}'",
    "check-format": "prettier --check '**/**/*.{js,ts,css,html,md,yaml,yml}'",
    "start:legacy-graphql": "cd packages/graphql-server && yarn start",
    "start:legacy-reddio": "cd packages/reddio-ui && yarn start",
    "start:legacy-reddio-storybook": "cd packages/reddio-ui && yarn run storybook",
    "build:tsc": "tsc",
    "build": "run-s build:*",
    "start": "now dev"
  },
  "dependencies": {
    "apollo-server-hapi": "^2.4.8",
    "axios": "^0.18.0",
    "dataloader": "^1.4.0",
    "graphql": "14.2.1",
    "hapi": "^18.1.0",
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "@now/node": "^0.12.7",
    "@types/axios": "^0.14.0",
    "@types/graphql": "14.2.0",
    "@types/hapi": "18.0.1",
    "@types/jest": "24.0.11",
    "@types/lodash": "4.14.123",
    "@types/node": "11.13.0",
    "node-dev": "^3.1.3",
    "now": "^16.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "typescript": "^3.4.2"
  }
}
