{
  "name": "@app/reddio-ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "BROWSER=false react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "storybook": "rnstl && start-storybook -p 9009 -s public --ci",
    "build-storybook": "rnstl && build-storybook -s public",
    "percy": "build-storybook && percy-storybook --widths=320,1280"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "config": {
    "react-native-storybook-loader": {
      "searchDir": [
        "./src"
      ],
      "pattern": "**/*.story.js",
      "outputFile": "./.storybook/storyLoader.js"
    }
  },
  "dependencies": {
    "apollo-boost": "^0.3.1",
    "graphql": "^14.0.2",
    "immer": "^2.1.4",
    "invariant": "^2.2.4",
    "lodash": "^4.17.11",
    "normalize.css": "^8.0.1",
    "open-iconic": "^1.1.1",
    "qs": "^6.7.0",
    "react": "^16.8.5",
    "react-apollo": "^2.5.2",
    "react-art": "^16.8.5",
    "react-dom": "^16.8.5",
    "react-native-web": "^0.11.2",
    "react-player": "^1.10.0",
    "react-redux": "^6.0.1",
    "react-router-dom": "^5.0.0",
    "react-scripts": "2.1.8",
    "redux": "^4.0.1",
    "redux-logger": "^3.0.6",
    "redux-observable": "^1.1.0",
    "rxjs": "^6.4.0",
    "use-media": "^1.3.0"
  },
  "devDependencies": {
    "@percy/storybook": "^3.0.2",
    "@storybook/addon-actions": "^5.0.6",
    "@storybook/addon-links": "^5.0.6",
    "@storybook/addons": "^5.0.6",
    "@storybook/react": "^5.0.6",
    "react-native-storybook-loader": "^1.8.0"
  }
}
